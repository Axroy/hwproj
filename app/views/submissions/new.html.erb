<%= simple_form_for Submission.new, html: {multipart: true} do |f| %>

  <%= f.simple_fields_for :task do |t| %>
    <%= t.input :problem_id, required: false, label: "Задача" do %>
      <%= t.grouped_collection_select :problem_id, Homework.order(:number), :problems, :number, :id, :name, include_blank: false %>
    <% end %>
  <% end %>

  <%= f.input :text, label: "Текст к решению" %>

  <%= f.input :file %>

 <br>

  <%= f.submit "Отправить решение" %>

<% end %>