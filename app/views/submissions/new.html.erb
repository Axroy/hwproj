<%= simple_form_for @submission, html: {multipart: true} do |f| %>
  <%= f.label "Задача" %> <br>
  <%= f.collection_select :task_id, current_user.tasks.select{|x| x.status != "accepted"}, :id, :name, label: "Задача" %>

  <%= f.input :file, label: "Решение" %>

  <%= f.input :text, as: 'text', label: "Комментарий к решению", input_html: { rows: 5, cols: 30 } %>

 <br>

  <%= f.submit "Отправить", class: "btn btn-primary" %>

<% end %>