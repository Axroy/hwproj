<%= simple_form_for @submission, html: {multipart: true} do |f| %>
  <%= f.simple_fields_for @submission.task do |t| %>
    <%= t.input :problem_id, required: false, label: "Задача" do %>
      <%= t.grouped_collection_select :problem_id, current_user.group.homeworks.order(:number).select{|x| x.problems.any?}, :problems, :number, :id, :name, include_blank: false %>
    <% end %>
  <% end %>

  <%= f.input :file, label: "Решение" %>

  <%= f.input :text, as: 'text', label: "Комментарий к решению", input_html: { rows: 5, cols: 30 } %>

 <br>

  <%= f.submit "Отправить" %>

<% end %>