<h2>Регистрация</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :name, label: "Имя" %>
    <%= f.input :surname, label: "Фамилия" %>
    <%= f.association :group, label: "Группа" %>
    <%= f.input :gender, collection: { "мужской" => :male, "женский" => :female }, label: "Пол" %> 
    <%= f.input :password, label: "Пароль" %>
    <%= f.input :password_confirmation, label: "Подтверждение" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Регистрация" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
