<% if @homeworks.any? %>
  <ul>
    <% @homeworks.each do |hw| %>
      <li> <b> Домашняя работа <%= hw.number %> <%= link_to "Редактировать", edit_homework_path(hw) if signed_in? && current_user.teacher?%> </b> </li>
        <ol>
        <% hw.problems.each do |problem| %>
          <li> <%= problem.text %> </li>
          <% end %>
        </ol>
    <% end %>
  </ul>
<% else %>
  <h2> Нет домашних работ </h2>
<% end %>