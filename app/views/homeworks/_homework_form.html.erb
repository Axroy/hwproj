<%= simple_form_for @homework  do |f| %>
  
  <h1> Домашняя работа <%= @homework_number %> </h1>

  <%= f.association :group %>

  <%= f.simple_fields_for :problems do |problem| %>
    <%= render 'problem_fields', f: problem %>
  <% end %>
    
  <div class="links">
    <%= link_to_add_association 'Добавить задачу', f, :problems, class: "btn btn-default" %>
  </div>
  <%= f.button :submit, "Создать", class: "btn btn-primary" %>
<% end %>

