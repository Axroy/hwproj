<h1>
  Группа <%= @group.name %>
  <small>
    <% if signed_in? && current_user.teacher? %>
      <%= link_to edit_group_path do %>
      	<span class="glyphicon glyphicon-pencil"></span>
      <% end %>
    <% end %>
  </small>
</h1>
<% if @group.homeworks.empty? %>
  <h1> Нет домашних работ.</h1>
<% else %>
  <%= render 'group_table' %>
  <%= render 'group_homeworks' %>
<% end %>
