<div class="row">
  <div class="col-md-8">
    <h1>Новости</h1>
    <% current_user.tasks.each do |task| %>
      <% if task.notes.count != 0 %>
        <h5> 
          К задаче <%= link_to "#{task.problem.homework.number}.#{task.problem.number}", task %>
          добавлены замечания.
          <small><%= task.notes.last.created_at.to_date %></small>
        </h5>
      <% end %>
      <% if task.status == "accepted" %>
        <h5>
          Задача <%= link_to "#{task.problem.homework.number}.#{task.problem.number}", task %> принята.
          <small><%= task.updated_at.to_date %></small>
        </h5>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class="col-md-12">
        <h1>Дедлайн</h1>
        <% if @deadline_tasks.any? %>
          Осталась неделя:
          <ul>
          <% @deadline_tasks.each do |task| %>
            <li><%= link_to task.name, task %></li>
          <% end %>
          </ul>
        <% else %>
          Всё идёт по плану! :)
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h1>Просроченные задачи</h1>
        <% if @overdue_tasks.any? %>
          <ul>
          <% @overdue_tasks.each do |task| %>
            <li><%= link_to task.name, task %></li>
          <% end %>
          </ul>
        <% else %>
          Просроченных нет.
        <% end %>
      </div>
    </div>
  </div>
</div>