<% if signed_in? %>
  <% if current_user.teacher? %>
    <div class="row">
      <div class="col-md-8">
        <h1>Новости</h1>
        <% @submissions.each do |submission| %>
          <h5>  
            <%= link_to submission.user.name, '#' %> добавил 
            <%= link_to "версию #{submission.version}", submission.task %> решения 
            <%= link_to "задачи #{submission.task.problem.homework.number}.#{submission.task.problem.number}", submission.task.problem %> 
            <small><%= submission.created_at %></small>
          </h5>
        <% end %>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12"><h1>Дедлайн</h1></div>
        </div>
        <div class="row">
          <div class="col-md-12"><h1>Вопросы по задачам</h1></div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="">
        
      </div>
    </div>
  <% end %>
<% end %>